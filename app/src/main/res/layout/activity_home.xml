<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/black"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:text="Where fitness"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textSize="45sp"
        android:layout_marginLeft="30sp"
        android:layout_marginTop="40sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="meets health."
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textSize="45sp"
        android:layout_marginStart="30sp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:text="Nice-looking body and powerful organism are interconnected - and we can help you with both."
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/first"
            app:layout_constraintStart_toEndOf="@+id/text1"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:background="@drawable/rounded_corner_view"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img2" />

        <TextView
            android:layout_marginTop="30dp"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="if you can dream it, you can do it."
            android:textColor="@color/white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:background="@drawable/rounded_corner_view2"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Did you know"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="25sp"
                android:text="Regular exercise
helps lower blood pressure and cholesterol levels. Two major risk factors for heart disease."
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="normal" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/img3" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue"
            android:text="SCHEDULE"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:id="@+id/scheduleclass"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue"
            android:text="WORKOUT"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:id="@+id/homeworkout"
            />
    </LinearLayout>
    </ScrollView>
</LinearLayout>