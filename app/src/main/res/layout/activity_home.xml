<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/black"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="670dp"
        android:layout_gravity="center"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:text="@string/title1"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="45sp"
            android:layout_marginTop="40sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title2"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:textSize="45sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text1"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/desc"
                android:textColor="@color/white"
                android:textSize="22sp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/first"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corner_view"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img2" />

            <TextView
                android:layout_marginTop="30dp"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/motivation"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corner_view2"
            android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/facttitle"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="25sp"
                    android:text="@string/fact"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/img3" />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="80"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="-30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="10dp"
        android:background="@color/black">

        <ImageView
            android:id="@+id/home"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_weight="20"
            android:onClick="ongohome"
            app:srcCompat="@drawable/home"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/workout"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_weight="20"
            android:onClick="ongogym"
            app:srcCompat="@drawable/ic_classes" />

        <ImageView
            android:id="@+id/schedule"
            android:layout_width="70dp"
            android:layout_height="40dp"

            android:layout_weight="20"
            android:onClick="ongosession"
            app:srcCompat="@drawable/karate" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_weight="20"

            android:onClick="ongoprofile"

            app:srcCompat="@drawable/ic_profile" />
    </LinearLayout>

</LinearLayout>